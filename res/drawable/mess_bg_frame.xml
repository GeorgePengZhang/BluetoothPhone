<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 填充的颜色 -->
    <solid android:color="@color/white" />

    <stroke
        android:width="0.6dp"
        android:color="@color/mess_list_bg" />
    <!-- 设置矩形的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="10dip" />
    
    <item android:drawable="@color/bg_gray_30" android:state_pressed="true"/>
    <item android:drawable="@color/bg_gray_30" android:state_focused="true"/>
    <item android:drawable="@color/font_white"/>

</shape>
    <!-- txt setting style -->
    <style name="txt_setting_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- ***********************cbox style ******************** -->
    <!-- cbox switch style -->
    <style name="cbox_switch_style">
        <item name="android:layout_width">@dimen/checkbox_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/cbox_switch_selector</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- **************************输入框风格**************************** -->
    <style name="edit_white_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/edit_white_bg_normal</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:layout_marginBottom">2.5dp</item>
    </style>


    <!-- Button send style -->
    <style name="button_submit_white_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_content</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:background">@drawable/btn_white_bg_selector</item>
    </style>

</resources>

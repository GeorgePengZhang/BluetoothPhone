<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_layout_height30"
    android:layout_marginBottom="@dimen/activity_layout_height30"
    android:layout_marginLeft="@dimen/activity_vertical_margin15"
    >

    <com.aura.iotcontrol.view.CircleImageView
        android:id="@+id/activity_userinfo_img_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_gravity="left"
        android:src="@drawable/main_mine_bg"
        android:contentDescription="@null" />

    <RelativeLayout
        android:id="@+id/view_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/activity_userinfo_img_portrait"
        android:background="@drawable/bg_chat_from_pressed"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
</LinearLayout>
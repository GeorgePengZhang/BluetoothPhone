<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_white_selector"
    android:padding="10dp"
    android:orientation="horizontal" >

    <com.aura.bluetoothphone.view.connect.CircleImageView
        android:id="@+id/id_image"
        android:layout_width="48dp"
        android:layout_height="48dp" 
        android:src="@drawable/ic_contact_picture_holo_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:singleLine="true"
            android:text="aaaaaa"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="13000001111"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#888888"
                android:textSize="12sp"
                android:text="手机"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/call_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:id="@+id/call_type_icons"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_call_incoming_holo_dark"/>

            <TextView
                android:id="@+id/call_count_and_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:singleLine="true"
                android:text="4个小时前"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>